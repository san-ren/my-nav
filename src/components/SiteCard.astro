---
import { marked } from 'marked';

const { title, name, url, desc, detail, official_site, badge_list = [] } = Astro.props;
const displayTitle = title || name;
const base = '/my-nav';

const getFavicon = (mainUrl, secondaryUrl) => {
  const targetUrl = secondaryUrl || mainUrl;
  try {
    const domain = new URL(targetUrl).hostname;
    return `https://www.google.com/s2/favicons?domain=${domain}&sz=128`;
  } catch (e) {
    return `${base}/favicon.svg`;
  }
};

let badgeHtml = "";
if (url && url.includes("github.com")) {
  try {
    const pathParts = new URL(url).pathname.split('/').filter(Boolean);
    if (pathParts.length >= 2) {
      const owner = pathParts[0];
      const repo = pathParts[1];
      const badgeConfigs = {
        stars: `https://img.shields.io/github/stars/${owner}/${repo}?style=flat-square&color=blue&label=Stars`,
        version: `https://img.shields.io/github/v/release/${owner}/${repo}?style=flat-square&color=orange&label=Release`,
        license: `https://img.shields.io/github/license/${owner}/${repo}?style=flat-square&color=green&label=License`,
        last_commit: `https://img.shields.io/github/last-commit/${owner}/${repo}?style=flat-square&color=slate&label=Updated`
      };
      badge_list.forEach(key => {
        if (badgeConfigs[key]) {
          badgeHtml += `<img src="${badgeConfigs[key]}" style="display:inline-block; margin-right:4px; height:20px; vertical-align:middle;" />`;
        }
      });
    }
  } catch(e) {
    console.log("URL parsing error", e);
  }
}

const rawMarkdown = detail || "";
const detailContent = marked.parse(rawMarkdown);
const finalDetailHtml = badgeHtml ? `<div style="margin-bottom:8px; line-height:1;">${badgeHtml}</div>${detailContent}` : detailContent;
const logoUrl = getFavicon(url, official_site);
---

<div class="group relative">
  <a href={url} target="_blank" 
     class="flex items-center p-3 h-[90px] bg-white/60 dark:bg-gray-800/40 backdrop-blur-md rounded-2xl border border-white/50 dark:border-gray-700/30 shadow-sm hover:shadow-xl hover:shadow-blue-500/10 hover:-translate-y-1.5 transition-all duration-300 hover:border-blue-500/50"
  >
    <div class="flex-shrink-0 mr-3 w-10 h-10 rounded-xl bg-white dark:bg-gray-700 shadow-sm overflow-hidden flex items-center justify-center border border-gray-100 dark:border-gray-600 group-hover:scale-110 transition-transform duration-300">
      <img 
        src={logoUrl} 
        alt={displayTitle} 
        loading="lazy"
        class="w-6 h-6 object-contain" 
        onerror={`this.src='${base}/favicon.svg'`} 
      />
    </div>
    
    <div class="flex-1 min-w-0 flex flex-col justify-center text-center px-1">
      <h3 class="font-bold text-[14px] text-slate-800 dark:text-slate-100 group-hover:text-blue-600 transition-colors line-clamp-1 mb-0.5">
        {displayTitle}
      </h3>
      
      {/* 核心修改：只有当 desc 存在时才渲染 p 标签，且去掉了 || url */}
      {desc && (
        <p class="text-[12px] text-slate-400 dark:text-slate-500 leading-tight line-clamp-2 h-[2.2em] overflow-hidden">
          {desc}
        </p>
      )}
      
    </div>
  </a>

  {detail && (
    <div class="absolute bottom-full left-1/2 -translate-x-1/2 mb-4 w-72 p-4 bg-white/95 dark:bg-gray-900/95 backdrop-blur-xl rounded-2xl border border-slate-200 dark:border-slate-700 shadow-2xl opacity-0 invisible group-hover:opacity-100 group-hover:visible translate-y-2 group-hover:translate-y-0 transition-all duration-300 z-50 pointer-events-none">
      <div class="absolute -bottom-2 left-1/2 -translate-x-1/2 w-4 h-4 bg-white/95 dark:bg-gray-900/95 border-r border-b border-slate-200 dark:border-slate-700 rotate-45"></div>
      <div class="text-[12px] font-black text-blue-600 dark:text-blue-400 mb-2.5 flex items-center gap-2 uppercase tracking-wider">
        <span class="w-1.5 h-3 bg-blue-500 rounded-full"></span>
        详情介绍
      </div>
      <div class="detail-markdown text-[11px] text-slate-600 dark:text-slate-400 leading-relaxed" set:html={finalDetailHtml}></div>
    </div>
  )}
</div>

<style is:global>
  .detail-markdown p { @apply mb-2; }
  .detail-markdown b, .detail-markdown strong { @apply text-slate-800 dark:text-slate-200 font-bold; }
  .detail-markdown ul { @apply list-disc list-inside mb-2; }
  .detail-markdown img { @apply inline-block mt-1 mb-1 rounded-sm; max-height: 20px; }
  .detail-markdown hr { @apply border-slate-100 dark:border-slate-800 my-2; }
</style>