---
import { marked } from 'marked';
import { BookOpen, Info } from 'lucide-react';

const { title, name, url, desc, detail, official_site, badge_list = [], guide_id } = Astro.props;
const displayTitle = title || name;
const base = '/my-nav';

const getDomain = (targetUrl) => {
  try {
    if (!targetUrl) return null;
    return new URL(targetUrl).hostname;
  } catch (e) {
    return null;
  }
};

const domain = getDomain(url || official_site);

// 定义各级图标源
const iconSources = {
  level1: domain ? `https://api.iowen.cn/favicon/${domain}.png` : '',
  level2: domain ? `https://api.uomg.com/api/get.fav?url=https://${domain}` : '',
  level3: domain ? `https://www.google.com/s2/favicons?domain=${domain}&sz=128` : '',
  fallback: `${base}/favicon.svg`
};

// 默认首选 Level 1
const defaultIcon = iconSources.level1 || iconSources.fallback;

// --- Badge 逻辑 (保持不变) ---
let badges = [];
if (url && url.includes("github.com") && badge_list && badge_list.length > 0) {
  try {
    const pathParts = new URL(url).pathname.split('/').filter(Boolean);
    if (pathParts.length >= 2) {
      const owner = pathParts[0];
      const repo = pathParts[1];
      const styleParam = "?style=flat&color=blue"; 
      
      const badgeConfigs = {
        stars: { src: `https://img.shields.io/github/stars/${owner}/${repo}${styleParam}&label=Stars`, alt: "Stars" },
        version: { src: `https://img.shields.io/github/v/release/${owner}/${repo}${styleParam}&color=orange&label=Release`, alt: "Version" },
        license: { src: `https://img.shields.io/github/license/${owner}/${repo}${styleParam}&color=green&label=License`, alt: "License" },
        last_commit: { src: `https://img.shields.io/github/last-commit/${owner}/${repo}${styleParam}&color=slate&label=Updated`, alt: "Last Commit" }
      };
      badge_list.forEach(key => {
        if (badgeConfigs[key]) badges.push(badgeConfigs[key]);
      });
    }
  } catch(e) { console.error("Badge error", e); }
}

const rawMarkdown = detail || "";
const detailContent = marked.parse(rawMarkdown);
// 生成一个唯一ID用于JS定位（使用域名或随机数）
const cardId = `site-${domain ? domain.replace(/[^a-zA-Z0-9]/g, '-') : Math.random().toString(36).substr(2, 9)}`;
---

<div class="site-card-wrapper group relative hover:z-[999]">
  <a href={url} target="_blank" 
     class="flex items-center py-2 px-3 h-[90px] bg-white/60 dark:bg-gray-800/40 backdrop-blur-md rounded-2xl border border-white/50 dark:border-gray-700/30 shadow-sm hover:shadow-xl hover:shadow-blue-500/10 hover:-translate-y-1 transition-all duration-300 hover:border-blue-500/50 relative"
  >
    <!-- 左侧图标 -->
    <div class="flex-shrink-0 mr-3 w-10 h-10 rounded-xl bg-white dark:bg-gray-700 shadow-sm overflow-hidden flex items-center justify-center border border-gray-100 dark:border-gray-600">
      <!-- 
        核心修改：
        1. 添加 id={cardId} 用于脚本查找
        2. data-domain 存储域名，用于 localStorage 键名
        3. data-sources 存储所有备选链接
        4. onload: 图片加载成功时，保存当前 src 到本地存储
        5. onerror: 加载失败时，读取 data-sources 切换下一个
      -->
      <img 
        id={cardId}
        src={defaultIcon} 
        data-domain={domain}
        data-sources={JSON.stringify(iconSources)}
        alt={displayTitle} 
        loading="lazy" 
        referrerpolicy="no-referrer"
        class="w-6 h-6 object-contain" 
        onload="handleIconLoad(this)"
        onerror="handleIconError(this)"
      />
    </div>
    
    <div class="flex-1 min-w-0 flex flex-col justify-center text-center px-1">
      <h3 class="font-bold text-[14px] text-slate-800 dark:text-slate-100 group-hover:text-blue-600 transition-colors line-clamp-1 mb-0.5">{displayTitle}</h3>
      {desc && (
        <p class="text-[12px] text-slate-400 dark:text-slate-500 leading-4 line-clamp-3 overflow-hidden">
          {desc}
        </p>
      )}
    </div>

    {detail && (
      <button onclick="toggleDetail(this, event)" class="info-btn md:hidden absolute top-2 right-2 p-1.5 rounded-full bg-slate-100/50 dark:bg-slate-700/50 text-slate-400 hover:text-blue-500 hover:bg-blue-50 dark:hover:bg-gray-600 z-20 transition-all scale-90" title="详情"><Info size={14} /></button>
    )}

    {guide_id && (
      <button onclick={`event.preventDefault(); event.stopPropagation(); window.open('${base}/guide/${guide_id}', '_blank');`} class={`absolute top-2 p-1.5 rounded-lg bg-blue-50 text-blue-500 hover:bg-blue-500 hover:text-white transition-all duration-200 z-20 opacity-0 group-hover:opacity-100 scale-90 hover:scale-105 ${detail ? 'right-9 md:right-2' : 'right-2'}`} title="教程"><BookOpen size={14} strokeWidth={2.5} /></button>
    )}
  </a>

  {detail && (
    <div class="detail-popup absolute bottom-full left-1/2 -translate-x-1/2 mb-4 w-72 pointer-events-none z-[1000] opacity-0 invisible group-hover:opacity-100 group-hover:visible translate-y-2 group-hover:translate-y-0 transition-all duration-200">
      <div class="relative rounded-2xl shadow-[0_20px_50px_rgba(0,0,0,0.15)] border border-slate-200/60 dark:border-slate-700 p-5" style="background: #ffffff; background-color: white !important; opacity: 1 !important;">
        <div class="absolute inset-0 rounded-2xl -z-10 bg-white dark:bg-[#1e2025]" style="opacity: 1 !important;"></div>
        <div class="absolute -bottom-2 left-1/2 -translate-x-1/2 w-4 h-4 border-r border-b border-slate-200 dark:border-slate-700 rotate-45" style="background: inherit; opacity: 1 !important;"></div>
        <div class="relative z-10">
          <div class="text-[11px] font-black text-blue-600 dark:text-blue-400 mb-2.5 flex items-center gap-2 uppercase tracking-widest"><span class="w-2 h-3 bg-blue-500 rounded-sm"></span>详情</div>
          {badges.length > 0 && (<div class="flex flex-wrap gap-2 mb-3 border-b border-slate-100 dark:border-slate-800 pb-3">{badges.map(b => <img src={b.src} alt={b.alt} class="h-5 rounded-sm" />)}</div>)}
          <div class="detail-markdown text-[13px] text-slate-700 dark:text-slate-300 leading-relaxed font-medium whitespace-normal break-words" set:html={detailContent}></div>
        </div>
      </div>
    </div>
  )}
</div>

<script is:inline>
  // --- 图标缓存与回退逻辑 ---
  
  // 1. 初始化时，尝试从 localStorage 读取该域名上次成功的图标 URL
  // 这段代码在 HTML 解析时立即执行，尽可能减少闪烁
  (function() {
    // 获取当前正在执行的 script 标签之前的那个 img（这有点 hacky，但对于 Astro component 有效）
    // 更稳妥的方式是在下面 document loaded 后批量处理，或者利用 inline function
  })();

  function handleIconLoad(img) {
    const domain = img.getAttribute('data-domain');
    // 如果图片加载成功，且不是兜底的 svg，就保存这个 url
    if (domain && !img.src.endsWith('favicon.svg')) {
      localStorage.setItem('fav-' + domain, img.src);
    }
  }

  function handleIconError(img) {
    const sources = JSON.parse(img.getAttribute('data-sources'));
    const currentSrc = img.src;
    
    // 逻辑：Iowen -> Uomg -> Google -> Fallback
    if (currentSrc === sources.level1) {
      // 如果 Level 1 失败，试 Level 2
      img.src = sources.level2;
    } else if (currentSrc === sources.level2) {
      // 如果 Level 2 失败，试 Level 3 (Google)
      img.src = sources.level3;
    } else if (currentSrc === sources.level3) {
      // 如果 Level 3 失败，试兜底
      img.src = sources.fallback;
      // 兜底图标加载成功也无需清除 localStorage，因为下次还会重试 Level 1
    } else {
      // 防止死循环
      img.onerror = null;
    }
  }

  // 页面加载完成后，检查是否有已缓存的图标，如果有，直接替换
  // 这样下次刷新页面时，会直接跳过失败的 API
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('img[data-domain]').forEach(img => {
      const domain = img.getAttribute('data-domain');
      const cachedSrc = localStorage.getItem('fav-' + domain);
      if (cachedSrc && cachedSrc !== img.src) {
        // 只有当缓存的 URL 有效（非空）时才替换
        // 可以在这里做一个简单的 check，或者直接信赖缓存
        img.src = cachedSrc;
      }
    });
  });

  // --- 详情弹窗逻辑 (保持不变) ---
  function toggleDetail(btn, e) {
    e.preventDefault(); e.stopPropagation(); 
    const wrapper = btn.closest('.site-card-wrapper');
    const popup = wrapper.querySelector('.detail-popup');
    if(!popup) return;
    const isVisible = popup.classList.contains('mobile-visible');
    document.querySelectorAll('.detail-popup').forEach(p => {
      p.classList.remove('mobile-visible');
      p.style.opacity = ''; p.style.visibility = ''; p.style.transform = '';
    });
    if (!isVisible) {
      popup.classList.add('mobile-visible');
      popup.style.opacity = '1'; popup.style.visibility = 'visible';
      popup.style.transform = 'translateY(0) translateX(-50%)'; 
    }
  }

  document.addEventListener('click', (e) => {
    if (!e.target.closest('.info-btn') && !e.target.closest('.detail-popup')) {
      document.querySelectorAll('.detail-popup').forEach(p => {
        p.classList.remove('mobile-visible');
        p.style.opacity = ''; p.style.visibility = ''; p.style.transform = '';
      });
    }
  });
</script>

<style is:global>
  .dark .detail-markdown-parent { background-color: #1e2025 !important; }
  .detail-markdown p { margin-bottom: 0.5rem; }
  .detail-markdown p:last-child { margin-bottom: 0; }
  .detail-markdown ul { list-style-type: disc; padding-left: 1.2em; margin-bottom: 0.5rem; }
  .detail-markdown li { margin-bottom: 0.2rem; }
  .detail-markdown a { color: #3b82f6; text-decoration: underline; }
</style>