---
import Layout from '../layouts/Layout.astro';
import Sidebar from '../components/Sidebar.astro';
import SiteCard from '../components/SiteCard.astro';
import SearchModal from '../components/SearchModal.jsx';
import siteConfig from '../data/config.json';
import { LayoutDashboard, Star, Code, Palette, Sun, Moon, Clapperboard, Headphones, Image, Video, Hammer, Settings, Briefcase, Network, Download, Menu } from 'lucide-react';
import ThemePicker from '../components/ThemePicker.astro';


export async function getStaticPaths() {
  const allNavFiles = import.meta.glob('../data/nav/*.json', { eager: true });
  let navResources = Object.values(allNavFiles);
  navResources.sort((a: any, b: any) => {
    return (a.sortOrder || 99) - (b.sortOrder || 99);
  });
  return navResources.map((section: any) => ({
    params: { id: section.id },
    props: { section, navResources }, 
  }));
}

const { section, navResources } = Astro.props;
const { id } = Astro.params;

const Icons = { Star, Code, Palette, LayoutDashboard, Clapperboard, Headphones, Image, Video, Hammer, Settings, Briefcase, Network, Download };
const CurrentIcon = Icons[section.icon] || LayoutDashboard;
---

<Layout title={`${section.name} - ${siteConfig.title}`}>
  <div class="flex min-h-screen">
    
    <Sidebar navResources={navResources} currentId={id} siteConfig={siteConfig} />

    <div id="sidebar-overlay" class="fixed inset-0 bg-black/40 z-40 hidden md:hidden backdrop-blur-sm transition-opacity" onclick="toggleSidebar()"></div>

    <main class="flex-1 md:ml-[var(--sidebar-width)] bg-gray-50/50 dark:bg-gray-900/50 min-h-screen">
      
      <header id="page-header" class="sticky top-0 z-30 flex items-center justify-between px-4 md:px-8 py-4 bg-white/40 dark:bg-gray-900/40 backdrop-blur-md border-b border-slate-200/50 dark:border-gray-800/50 transition-transform duration-300">
        <div class="flex items-center gap-3">
          <button id="menu-btn" class="md:hidden p-2 text-slate-600 dark:text-slate-300 bg-white/80 dark:bg-gray-800/80 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700" onclick="toggleSidebar()">
            <Menu size={20} />
          </button>

          <h1 class="text-xl font-black flex items-center gap-3 text-slate-800 dark:text-white">
            <div class="p-2 bg-blue-50 dark:bg-blue-900/30 rounded-lg text-blue-600"><CurrentIcon size={20} /></div>
            {section.name}
          </h1>
        </div>
        
        <div class="flex items-center gap-3">
          <SearchModal client:load />
          <ThemePicker />
          <button id="theme-toggle" class="p-2.5 bg-slate-100 dark:bg-gray-800 rounded-xl text-slate-500 hover:text-blue-600 transition-all">
            <Sun size={20} className="hidden dark:block" />
            <Moon size={20} className="block dark:hidden" />
          </button>
        </div>
      </header>

      <div class="p-6 lg:p-8 space-y-12 max-w-[1440px] mx-auto">
        {(section.groups || []).map((group, groupIdx) => (
          <div class="group-wrapper">
            <div id={`group-${groupIdx}`} class="flex items-center gap-3 mb-8 mt-12 first:mt-0 pb-2 border-b border-slate-100 dark:border-slate-800 scroll-mt-24">
              <h2 class="text-xl font-black text-slate-800 dark:text-slate-100">{group.name}</h2>
            </div>

            <div class="space-y-16">
              {(group.categories || []).map((category, catIdx) => {
                const uniqueId = `${groupIdx}-${catIdx}`;
                
                return (
                  <section id={`cat-${uniqueId}`} class="category-group scroll-mt-24">
                    <div class="flex flex-wrap items-center justify-start gap-y-4 gap-x-6 mb-8">
                      <h3 class="flex items-center gap-3 text-lg font-bold text-slate-700 dark:text-slate-200 shrink-0">
                        <span class="w-1.5 h-5 bg-blue-500 rounded-full"></span>
                        {category.name}
                      </h3>

                      {category.tabs && (
                        <div class="tab-nav-container relative z-0 flex bg-slate-200/50 dark:bg-slate-800/50 p-1 rounded-full">
                          <div class="tab-indicator absolute bg-white dark:bg-slate-700 shadow-sm rounded-full h-[calc(100%-8px)] top-1 transition-all duration-300 ease-[cubic-bezier(0.25,0.1,0.25,1.0)]"></div>
                          {category.tabs.map((tab, tabIdx) => (
                            <button
                              class={`tab-btn relative z-10 px-4 py-1.5 text-xs font-bold rounded-full transition-colors duration-200
                              ${tabIdx === 0 ? 'text-blue-600 dark:text-blue-400 active-tab' : 'text-slate-500 hover:text-slate-700 dark:text-slate-400'}`}
                              data-target={`pane-${uniqueId}-${tabIdx}`}
                              data-index={tabIdx}
                            >
                              {tab.tabName}
                            </button>
                          ))}
                        </div>
                      )}
                    </div>

                    <div class="tab-content-wrapper relative z-10">
                      {category.tabs ? (
                        category.tabs.map((tab, tabIdx) => (
                          <div 
                            id={`pane-${uniqueId}-${tabIdx}`} 
                            class={`tab-pane animate-fade-in relative z-20 ${tabIdx !== 0 ? 'hidden' : ''}`}
                          >
                            {/* 修改点：调整网格列数与间距 */}
                            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 2xl:grid-cols-7 gap-3 md:gap-4 pt-1">
                              {(tab.list || []).map((site) => <SiteCard {...site} />)}
                            </div>
                          </div>
                        ))
                      ) : (
                        /* 修改点：调整网格列数与间距 */
                        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 2xl:grid-cols-7 gap-3 md:gap-4 pt-1">
                          {(category.list || []).map((site) => <SiteCard {...site} />)}
                        </div>
                      )}
                    </div>
                  </section>
                );
              })}
            </div>
          </div>
        ))}
        
        <footer class="mt-20 py-10 text-center text-[13px] text-slate-400 border-t border-slate-200/50 dark:border-gray-800/50">
          <p>Made with ❤️ by {siteConfig.author} © {new Date().getFullYear()}</p>
        </footer>
      </div>
    </main>
  </div>
</Layout>

<script is:inline>
  window.toggleSidebar = () => {
    const sidebar = document.getElementById('sidebar');
    const overlay = document.getElementById('sidebar-overlay');
    if (sidebar && overlay) {
      sidebar.classList.toggle('-translate-x-full');
      overlay.classList.toggle('hidden');
    }
  };
  function initTabs() {
    const containers = document.querySelectorAll('.tab-nav-container');
    containers.forEach(container => {
      const indicator = container.querySelector('.tab-indicator');
      const btns = container.querySelectorAll('.tab-btn');
      if (!indicator || btns.length === 0) return;
      const moveIndicator = (targetBtn) => {
        if (!targetBtn) return;
        indicator.style.left = `${targetBtn.offsetLeft}px`;
        indicator.style.width = `${targetBtn.offsetWidth}px`;
      };
      const activeBtn = container.querySelector('.active-tab') || btns[0];
      if(activeBtn) moveIndicator(activeBtn);
      btns.forEach(btn => {
        btn.addEventListener('mouseenter', () => moveIndicator(btn));
        btn.addEventListener('click', (e) => {
          e.preventDefault();
          btns.forEach(b => {
            b.classList.remove('active-tab', 'text-blue-600', 'dark:text-blue-400');
            b.classList.add('text-slate-500');
          });
          btn.classList.add('active-tab', 'text-blue-600', 'dark:text-blue-400');
          btn.classList.remove('text-slate-500');
          moveIndicator(btn);
          const group = container.closest('.category-group');
          const targetId = btn.getAttribute('data-target');
          group.querySelectorAll('.tab-pane').forEach(p => {
            p.classList.add('hidden');
            p.classList.remove('animate-fade-in');
          });
          const targetPane = document.getElementById(targetId);
          if(targetPane) {
            targetPane.classList.remove('hidden');
            void targetPane.offsetWidth;
            targetPane.classList.add('animate-fade-in');
          }
        });
      });
      container.addEventListener('mouseleave', () => {
        const currentActive = container.querySelector('.active-tab');
        if (currentActive) moveIndicator(currentActive);
      });
    });
  }
  function initHeaderScroll() {
    let lastScrollY = window.scrollY;
    const header = document.getElementById('page-header');
    const scrollThreshold = 100;
    window.addEventListener('scroll', () => {
      if (!header) return;
      const currentScrollY = window.scrollY;
      if (currentScrollY < scrollThreshold) {
        header.style.transform = 'translateY(0)';
        lastScrollY = currentScrollY;
        return;
      }
      if (currentScrollY > lastScrollY) {
        header.style.transform = 'translateY(-150%)';
      } else {
        header.style.transform = 'translateY(0)';
      }
      lastScrollY = currentScrollY;
    }, { passive: true });
  }
  initTabs();
  initHeaderScroll();
  document.addEventListener('astro:after-swap', () => {
    initTabs();
    initHeaderScroll();
  });
  window.addEventListener('resize', initTabs);
</script>

<style is:global>
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in {
    animation: fadeInUp 0.4s ease-out forwards;
  }
</style>